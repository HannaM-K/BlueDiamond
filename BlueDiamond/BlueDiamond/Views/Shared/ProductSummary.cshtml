@model Product

<div class="ml-5">
    <a asp-controller="Product" asp-action="ProductDetails"  asp-route-ID="@Model.ID">
        <img src="@Url.Action("GetImageFile", new { productID = this.Model.ID})" style="width: 300px; height: 300px;" >
    </a>
    <div class="container">
        <div class="row m-2">
            <p class="mr-1 mt-3">@Model.Name</p>
            <strong class=" ml-auto mt-3">@Model.Price.ToString("c")</strong>
            <form id="@Model.ID" class="ml-2" asp-action="AddToCart" asp-controller="Cart" method="post">
                <input type="hidden" asp-for="ID" />
                <button type="submit"
                        class="btn btn-light ml-auto mt-2"
                        style="height: 5vh;"
                        data-toggle="button"
                        aria-pressed="true"
                        autocomplete="off">
                    <i class="fas fa-shopping-basket" style="color: black;"></i>
                </button>
            </form>
        </div>
    </div>
</div>