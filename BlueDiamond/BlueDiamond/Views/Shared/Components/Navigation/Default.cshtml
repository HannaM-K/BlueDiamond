@model IEnumerable<string>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" asp-controller="Product" asp-action="List">BLUE DIAMOND <i class="fas fa-gem" style="color: rgb(81, 189, 216);"></i></a>
    <!-- To jest hamburger z menu dla mniejszych ekranów-->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item active">
                <form class="form-inline my-2 my-lg-0">
                    <!-- Do tego wyszukaj chcialabym dolaczyc lupe -> <i class="fas fa-search"></i> -->
                    <input class="form-control mr-sm-2" type="search" placeholder="Wyszukaj " aria-label="Search">
                </form>
            </li>
            <li class="nav-item active">
                <a class="nav-link ml-5 align-baseline" href="#">
                    <i class="fas fa-user" style="color: black;"></i>
                    Konto
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link ml-5" asp-controller="Cart" asp-action="ShowCart">
                    <i class="fas fa-shopping-basket" style="color: black;"></i>
                    Koszyk
                </a>
            </li>
        </ul>
    </div>
</nav>
<!-- Drugi navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav m-auto">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Etui
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item"
                       asp-action="List"
                       asp-controller="Product">Wszystkie</a>

                    @foreach (var categoryName in Model)
                    {
                        <a class="dropdown-item"
                           asp-action="List"
                           asp-controller="Product"
                           asp-route-categoryName="@categoryName">@categoryName</a>
                    }
                </div>
            </li>
            <li class="nav-item active">
                <a class="nav-link ml-5" href="#">Nowości <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link ml-5" href="#">Promocje <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link ml-5" href="#">Bestsellery <span class="sr-only">(current)</span></a>
            </li>
        </ul>
    </div>
</nav>