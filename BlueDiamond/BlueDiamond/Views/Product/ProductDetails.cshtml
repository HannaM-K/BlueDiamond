@model Product

<div class="container text-center bg-light" style="height: 75vh;">
    <div class="row h-100 justify-content-center align-items-center">
        <!-- karuzela z etui - ZMNIEJSZYC POZIOME ZDJECIE I DAC DOLNE ZDJECIA (podglad)-->
        <div id="carouselExampleIndicators" class="carousel slide col-md-6" data-interval="false"
             data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            </ol>
            <div class="carousel-inner ">
                <div class="carousel-item active ">
                    <img class="img-fluid" style="width: 60vh;" src="./images/phoneCase.jpg" alt="First slide">
                </div>
                <div class="carousel-item ">
                    <img class="img-fluid" style="width: 60vh;" src="./images/phoneCase1.jpg" alt="Second slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" style="filter: invert(100%);" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" style="filter: invert(100%);" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- Opis produktu-->
        <div class="col-6 container " style="max-width: 40vh; " id="productDescriptionContainer">
            <h3 class="mb-5">@Model.Name</h3>
            <div class="row">
                <div class="col">
                    <p>Cena:</p>
                </div>
                <div class="col">
                    <p>@Model.Price.ToString("c")</p>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <p>Opis:</p>
                </div>
                <div class="col">
                    <p>@Model.Description</p>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col">
                    <form id="@Model.ID" asp-action="AddToCart" asp-controller="Cart" method="post">
                        <input type="hidden" asp-for="ID" />
                        <button class="btn btn-light " type="submit" data-toggle="button" aria-pressed="true" autocomplete="off">
                            <i class="fas fa-shopping-basket" style="color: black;"></i><br />Dodaj
                            do koszyka
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
